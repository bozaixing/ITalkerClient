<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--标题栏-->
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textAlignment="center"
            app:title="@string/title_assist_permissions"
            app:titleTextColor="@color/textPrimary"
            android:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </android.support.design.widget.AppBarLayout>

    <!--滚动布局-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/len_92"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/len_16"
            android:orientation="vertical">

            <!--授权信息的描述-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_network"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_24"
                    android:text="@string/label_permission_network_desc"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <ImageView
                    android:id="@+id/permissions_state_network_view"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_read_external_storage"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_24"
                    android:text="@string/label_permission_read_external_storage_desc"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <ImageView
                    android:id="@+id/permissions_state_read_external_storage_view"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_write_external_storage"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_24"
                    android:text="@string/label_permission_write_external_storage_desc"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <ImageView
                    android:id="@+id/permissions_state_write_external_storage_view"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_record_audio"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/textPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_24"
                    android:text="@string/label_permission_record_audio_desc"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textSecond"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <ImageView
                    android:id="@+id/permissions_state_record_audio_view"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>

            <!--发起授权的按钮-->
            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/permissions_submit_btn"
                android:layout_width="@dimen/len_172"
                android:layout_height="@dimen/len_44"
                android:layout_marginTop="@dimen/len_48"
                android:layout_marginBottom="@dimen/len_48"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sel_btn_bg_accent_44"
                android:text="@string/label_permission_submit"
                android:textColor="@color/white"
                app:gTouchColor="@color/white_alpha_48"
                app:gTouchCornerRadius="22dp"
                app:gTouchEffect="ripple"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>